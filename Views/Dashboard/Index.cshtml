@model IEnumerable<InevntoryManagementSystem.Models.Stocks>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Dashboard</h3>
<div class="row">
    <div class="col-md-2">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5>Products</h5>
                <h3>@ViewBag.TotalProducts</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body">
                <h5>Categories</h5>
                <h3>@ViewBag.TotalCategories</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5>Suppliers</h5>
                <h3>@ViewBag.TotalSuppliers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5>Customers</h5>
                <h3>@ViewBag.TotalCustomers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5>Sales</h5>
                <h3>@ViewBag.TotalSales</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-dark mb-3">
            <div class="card-body">
                <h5>Present Stock</h5>
                <h3>@ViewBag.PresentStock</h3>
            </div>
        </div>
    </div>
</div>

<hr />

<h4>⚠ Low Stock Products</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Products</th>
            <th>Stocks</th>
            <th>Reorder Level</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
            <tr class="table-danger">
                <td>@item.ProductName</td>
                <td>@item.StockId</td>
                <td>@item.ReorderLevel</td>
            </tr>
}
    </tbody>
</table>